<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddActivity">


    <EditText
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="30"
            android:maxLines="1"
            android:textSize="14sp"
            android:ems="10"
            android:hint="@string/website_name"
            android:text="@string/name"
            android:id="@+id/addText1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintVertical_bias="0.135" android:autofillHints=""/>
    <Button
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnBackAdd"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.026"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="52dp" android:id="@+id/btnSubmitAdd"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.824"
            android:layout_marginBottom="264dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:maxLength="30"
            android:maxLines="1"
            android:textSize="14sp"
            android:id="@+id/editText2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.129" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/addText1" android:hint="@string/website_url"
            android:text="@string/addText" android:autofillHints="" tools:targetApi="o"/>

</android.support.constraint.ConstraintLayout>